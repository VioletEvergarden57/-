@import "list/list.wxss";

.total{
    display: flex;flex-direction: column;
    width: 100%;height: 460rpx;
    background: #62ffe7	;
    color:#f72ed5;
}

.total .total-money{
    width: 100%;height:100rpx;
    font-size: 50rpx;text-align: center;line-height: 100rpx;
}
.total .total-word{
    width: 100%;height:40rpx;
    font-size: 30rpx;text-align: center;line-height: 40rpx;
}

.total .total-list{
    width: 100%;height: 200rpx;
    display: flex;flex-direction: row;justify-content: space-between;
    
}
.total .total-list .shuxian{
    width: 2px;   
    background: #f72ed5;
    height: 140rpx;
    margin-top: 25rpx;
}
.total .total-list .total-out{
    flex-basis: 50%;
    display: flex;flex-direction: column;
}
.total .total-list .total-out .total-out-money{
    width: 100%；height：100rpx;
    font-size: 40rpx;line-height: 100rpx;
    text-align: center;
    padding-top: 10rpx;
}
.total .total-list .total-out .total-out-number{
    width: 100%；height：100rpx;
    font-size: 30rpx;
    text-align: center;
}

.total .total-list .total-in{
    flex-basis: 50%;
    display: flex;flex-direction: column;
}
.total .total-list .total-in .total-in-money{
    width: 100%；height：100rpx;
    font-size: 40rpx;line-height: 100rpx;
    text-align: center;
    padding-top: 10rpx;
}
.total .total-list .total-in .total-in-number{
    width: 100%；height：100rpx;
    font-size: 30rpx;
    text-align: center;
}



.add{
    width: 100%;
    color:#ffffff;text-align: center;
    background: #ffffff;
    padding: 20rpx 0;
    background: #107fff;
    position: relative;

}
.add .image{
    position: absolute;
    width: 50px;
    height: 50px;
   
}


.show{
    width: 100%;
    
}
.show span{
    display: block;
    width: 100%;
    text-align: center;
    font-size: 35rpx;
    padding:20rpx 0;
    margin:100rpx auto;
    color: #bbb;

}
.list-container{
    width: 100%;
}
