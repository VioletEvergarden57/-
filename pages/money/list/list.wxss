.outter{
    display: flex;flex-direction: column;
    position: relative;
}

.list{
    
    width: 100%;height: 70rpx;
    border-bottom: 1px solid #ccc;
    display: flex;flex-direction: row;justify-content: space-between;
    padding: 20rpx 0;
    position: relative;
    z-index: 998; 
    background: antiquewhite;
   
   

}


.list .list-people{
    font-size: 13px;
    font-weight: bold;
    line-height: 70rpx;
    width: 60px;
    padding-left: 10px;
}
.list .list-info{
    font-size: 12px;
    color: #999;
    flex-grow: 1;
    
}
.list .list-money-date{
    display: flex;flex-direction: column;
    font-size: 12px;
    height: 70rpx;
    width: 80px;
    text-align: right;
    padding-right: 10px;
    
}
.list .list-money-date .list-money{
    height: 35rpx;
    line-height: 35rpx;
    margin-bottom: 20rpx;
}
.list .list-money-date .list-date{
    height: 35rpx;
    line-height: 35rpx;
}
.delete{
    height: 110rpx;width: 70px;
    line-height: 110rpx;

    font-size: 14px;
    text-align: center;
    background: #ccc;
    color: orangered;
    position: absolute;top: 0;right: 0;

}
.delete-text{
   
   
    border: 2px solid #bbb;
    padding: 10px 5px;
    border-radius: 50px;
    background: white;
    
}
.colorRed{
    color: red;
}
.colorGreen{
    color: limegreen;
}