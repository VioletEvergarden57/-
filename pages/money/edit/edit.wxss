.container form{
    width: 100%;
}
.radio-group{
    width: 100%;
    display: flex;flex-direction: row;
    justify-content: space-around;
    padding: 50rpx 0;
    font-size: 22px;font-weight: bold;   
}
.radio-group .raido-active{
    color:#FF9966;
}
.radio-group .raido-noactive{
    color: #aaa;
}
.input-view{
    width: 100%;
    margin: 30rpx 0;
}

.input-view input{
    border: 1px solid #bbb;
    height: 70rpx;
    font-size: 14px;
    margin: 0 20rpx;
    padding-left:10rpx;
    background: #eee;
    border-radius: 30rpx;
}


.date-info{
    padding-top: 20px;
    width: 100%;
    margin-left:20rpx;

}
.date-info .picker{
    width: 250rpx;
    border: 1px solid #FFCC00;
    color: #FFCC33;font-size: 14px;
    padding:20rpx 10rpx;
    border-radius: 30rpx;
}
.save{
    margin-top: 200rpx;   
}
.save button{
    font-size: 18px;color: white;
    line-height: 40px;
    background: #FFCC33;
    height: 40px;width: 100px
}

.requireds{
    font-size: 12px;color: red;
    margin-left: 40rpx;
    line-height: 20px;
    height: 20px;
    
}
